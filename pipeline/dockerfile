FROM public.ecr.aws/lambda/python:3.10

# Set lambda root as working directory
WORKDIR ${LAMBDA_TASK_ROOT}

# Selenium-related installs
RUN yum update -y \
    && yum clean all \
    && yum install -y tar gzip bzip2
RUN yum install xz atk cups-libs gtk3 libXcomposite alsa-lib \
    libXcursor libXdamage libXext libXi libXrandr libXScrnSaver \
    libXtst pango at-spi2-atk libXt xorg-x11-server-Xvfb \
    xorg-x11-xauth dbus-glib dbus-glib-devel -y -q
RUN rm -rf /var/cache/yum
COPY install-firefox.sh .
RUN bash install-firefox.sh

# Grab requirement file and install
COPY requirements.txt  .
RUN  pip3 install -r requirements.txt

# Copy everything else
COPY . .

CMD [ "etl.handler" ]
